<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PengeluaranActivity"
    android:background="@color/grey">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:background="@color/brown"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titlepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/glacialindifference_bold"
            android:text="Tambah Pengeluaran"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#FFBD5B" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_card_round"
        android:orientation="vertical"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/glacialindifference_regular"
                android:text="Tanggal"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextTgl"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/background_input"
                android:fontFamily="@font/glacialindifference_regular"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Kapan adanya pengeluaran?"
                android:inputType="date"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="#b5b5b5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/glacialindifference_regular"
                android:text="Nominal"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextNominal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/background_input"
                android:fontFamily="@font/glacialindifference_regular"
                android:hint="Berapa pengeluaran Anda?"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="#b5b5b5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewKet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/glacialindifference_regular"
                android:text="Keterangan"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextKet"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/background_input"
                android:fontFamily="@font/glacialindifference_regular"
                android:hint="Untuk apa pengeluaran Anda?"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="#b5b5b5" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnSimpanPeng"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_button_simpan"
        android:fontFamily="@font/glacialindifference_bold"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@color/cream"
        android:textSize="22sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/btnKembaliPeng"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button_kembali"
        android:fontFamily="@font/glacialindifference_bold"
        android:text="Kembali"
        android:textAllCaps="false"
        android:textColor="@color/brown"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSimpanPeng" />

</androidx.constraintlayout.widget.ConstraintLayout>